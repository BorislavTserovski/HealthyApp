
@{
    ViewData["Title"] = "BMICalculator";
}

<h2 class="headerText">BMI Calculator</h2>
<table border="0" cellpadding="0" cellspacing="0" width="200" summary="This table is used for layout purposes only." class="bmiCalc" style="margin:auto;">
    <tbody>
        <tr>
            <td bgcolor="#6F48B3" width="200" colspan="3">
                <table width="209" border="0" cellpadding="0" cellspacing="0" summary="This table is used for layout purposes only.">
                    <tbody>
                        <tr>
                            <td bgcolor="#FFFFFF">
                                <a href="bmicalc.htm">
                                    <img src="images/bmi-m_01.gif" border="0" alt="View Standard Measurements" width="105" height="28">
                                </a>
                            </td>
                            <td bgcolor="#FFFFFF">
                                <img src="images/bmi-m_02.gif" border="0" alt="Metric Measurements" width="104" height="28">
                            </td>
                        </tr>
                    </tbody>
                </table>
                <!-- End ImageReady Slices -->
            </td>
        </tr>
        <tr>
            <td bgcolor="#6F48B3" width="13">
                <img border="0" src="/files/images/spacer.gif" width="12" height="1" alt=" ">
            </td>
            <td bgcolor="#6F48B3" width="184">
                <table border="0" cellspacing="0" width="185" bgcolor="#FFFFFF" cellpadding="2" summary="This table is used for layout purposes only.">
                    <tbody>
                        <tr>
                            <td width="50%" style="text-align:right;">
                                <b>
                                    <label for="htc">
                                        Your
                                        Height:
                                    </label>
                                </b>
                            </td>
                            <td width="50%" align="left">
                                <input type="text" name="htc" size="5" id="htc">
                            </td>
                        </tr>
                        <tr>
                            <td width="50%">&nbsp;</td>
                            <td width="50%" align="left"><b> (centimeters)</b></td>
                        </tr>
                        <tr>
                            <td width="50%" colspan="2"><img src="/files/images/spacer.gif" width="1" height="6" border="0" alt=" "></td>
                        </tr>
                        <tr>
                            <td width="50%" style="text-align:right;">
                                <b>
                                    <label for="kg">
                                        &nbsp;Your
                                        Weight:
                                    </label>
                                </b>
                            </td>
                            <td width="50%" align="left">
                                <input type="text" name="kg" size="5" id="kg">
                            </td>
                        </tr>
                        <tr>
                            <td width="50%">&nbsp;</td>
                            <td width="50%" align="left"><b> (kilograms)</b></td>
                        </tr>
                        <tr>
                            <td colspan="2" align="center" class="colcenter" style="padding-top:5px;">
                                <span class="colcenter" style="padding-top:5px;">
                                    <input type="button" value="Compute BMI" onclick="self.compute();">
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" align="center" class="colcenter">
                                <table cellspacing="0" cellpadding="0" border="0" width="150" summary="This table is used for layout purposes only.">
                                    <tbody>
                                        <tr>
                                            <td align="LEFT" width="122" colspan="3" style="background-image: url(images/oeilogo.gif); background-repeat: no-repeat; background-position: center top" height="201">
                                                <div style="margin-left: 45px; margin-top: -3px">
                                                    <label for="yourbmi">
                                                        <span style="font-size: .9em; font-weight:bold;">
                                                            Your
                                                            BMI:
                                                        </span>
                                                    </label><br><input name="bmi" type="text" size="4" id="yourbmi" style="text-align: center">
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </td>
            <td bgcolor="#6F48B3" width="13">
                <img border="0" src="/files/images/spacer.gif" width="12" height="1" alt=" ">
